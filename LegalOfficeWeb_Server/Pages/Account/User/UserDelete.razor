@page "/DeleteUser/{CurretnID}"
@using System;
@using LegalOfficeWeb_Models
@inject IUsersRepository ObjCustomService
@inject NavigationManager NavigationManager
<h2>Delete User</h2>
<hr />
<h3>Are you sure you want to delete this?</h3>
<div class="row">
    <div class="col-md-8">
        <div class="form-group">
            <label>User ID:</label>
            <label>@objCI.UserId</label>
        </div>
        <div class="form-group">
            <label>Name:</label>
            <label>@objCI.UserName</label>
        </div>
        <div class="form-group">
            <label>Gender:</label>
            <label>@objCI.FullName</label>
        </div>
        <div class="form-group">
            <label>Country:</label>
            <label>@objCI.Email</label>
        </div>
        <div class="form-group">
            <label>City:</label>            
            <label>@objCI.RoleIds</label>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <input type="button" @onclick="@DeleteUsers" class="btn btn-primary" value="Delete" />
            <input type="button" @onclick="@Cancel" class="btn btn-primary" value="Cancel" />
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string CurretnID { get; set; }
    UserDTO objCI = new UserDTO();

    protected override async Task OnInitializedAsync()
    {
        objCI = ObjCustomService.GetUsersDatail(Convert.ToInt32(CurretnID));
    }
    protected void DeleteUsers()
    {
        DeleteUser(objCI);
        NavigationManager.NavigateTo("Users");
    }
    void Cancel()
    {
        NavigationManager.NavigateTo("Users");
    }
    public string DeleteUser(UserDTO objUser)
        {
            ObjCustomService.DeleteUsers(objUser);
            return "Delete Successfully";
        }
}   