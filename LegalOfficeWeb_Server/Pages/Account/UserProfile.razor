@page "/account/avatar"
@using LegalOfficeWeb_Common
@using LegalOfficeWeb_Models
@inject ILocalStorageService _localStorage
<div>
    <div class="d-flex flex-column align-items-center text-center">
        <img src="" alt="Admin" class="rounded-circle p-1" width="110">
        <div class="mt-3">
            <p class="text-avatar">@Name</p>
            <p class=" text-avatar">@Id</p>
            
        </div>
    </div>
</div>
@code {
   // private UserDTO Profile { get; set; }=null;
    private string Name = "";
    private string Id = "";
    protected override async Task OnInitializedAsync()
    {
        var userInfo = await _localStorage.GetItemAsync<UserDTO>(SD.Local_UserDetails);
        Name = userInfo.Name;
        Id = userInfo.EmpId;
    }

}
